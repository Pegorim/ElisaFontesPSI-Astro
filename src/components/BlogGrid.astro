---
import { getCollection } from 'astro:content';

interface Props {
  limit?: number;
}

const { limit } = Astro.props;

const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
const posts = limit ? sortedPosts.slice(0, limit) : sortedPosts;

// Helper to format date
const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('pt-BR', {
    day: 'numeric',
    month: 'long',
    year: 'numeric'
  }).format(date);
};
---

<section id="blog" class="py-20 bg-stone-50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <div class="flex justify-between items-end mb-12">
        <div>
            <h2 class="font-heading text-3xl md:text-4xl font-bold text-text-main mb-2">Blog & Reflexões</h2>
            <p class="text-text-main/60">Artigos para nutrir sua saúde mental</p>
        </div>
        {limit && (
            <a href="/blog" class="hidden md:inline-block text-accent font-bold hover:underline">Ver todos os posts &rarr;</a>
        )}
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {posts.map((post) => (
        <article class="bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-lg transition-all duration-300 group">
            <!-- Image Placeholder if real image not available -->
            <div class="h-48 bg-card-bg relative overflow-hidden">
                <div class="absolute inset-0 bg-accent/10 group-hover:bg-accent/0 transition-colors"></div>
                <!-- We can use the image from frontmatter if we had real paths, for now using a colored block or icon -->
                 <div class="w-full h-full flex items-center justify-center text-accent/20">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                    </svg>
                 </div>
            </div>
            
            <div class="p-6">
                <span class="inline-block px-3 py-1 rounded-full bg-stone-100 text-xs font-bold text-accent tracking-widest mb-4">
                    {post.data.category}
                </span>
                
                <h3 class="font-heading text-xl font-bold text-text-main mb-2 group-hover:text-accent transition-colors">
                    <a href={`/blog/${post.slug}`}>{post.data.title}</a>
                </h3>
                
                <p class="text-text-main/70 text-sm line-clamp-3 mb-4">
                    {post.data.description}
                </p>
                
                <div class="text-xs text-text-main/40 border-t border-stone-100 pt-4">
                    {formatDate(post.data.pubDate)}
                </div>
            </div>
        </article>
      ))}
    </div>
    
     {limit && (
        <div class="mt-8 text-center md:hidden">
            <a href="/blog" class="inline-block text-accent font-bold hover:underline">Ver todos os posts &rarr;</a>
        </div>
    )}

  </div>
</section>
