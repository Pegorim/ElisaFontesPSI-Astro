<section class="relative w-full min-h-[500px] md:min-h-[550px]">
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <img
      src="/images/hero-bg.jpg"
      alt="Consultório de terapia acolhedor"
      class="w-full h-full object-cover"
    />
  </div>

  <!-- Content Container -->
  <div class="relative z-10 w-full h-full min-h-[500px] md:min-h-[550px] flex flex-col justify-between px-6 md:px-12 lg:px-20 py-8 md:py-12">

    <!-- Top Left Text -->
    <div class="max-w-md">
      <h1 class="font-heading text-3xl md:text-4xl lg:text-5xl text-text-main leading-tight">
        Preso em um ciclo de preocupações sem fim?
      </h1>
    </div>

    <!-- Bottom Row: Profile Picture + Right Text -->
    <div class="flex justify-between items-end">

      <!-- Profile Picture - overlaps into nav below -->
      <div class="relative z-30 -mb-20 md:-mb-16">
        <div class="w-32 h-32 md:w-40 md:h-40 lg:w-48 lg:h-48 rounded-full border-4 border-white shadow-xl overflow-hidden bg-white">
          <img
            src="/images/profile.jpg"
            alt="Elisa Fontes Psicóloga"
            class="w-full h-full object-cover"
          />
        </div>
      </div>

      <!-- Right Side CTA Text -->
      <div class="text-right">
        <p class="font-heading text-2xl md:text-3xl lg:text-4xl text-text-main leading-tight">
          Agende sua<br />consulta!
        </p>
        <a
          href="https://wa.me/5521987449887"
          aria-label="Chat no WhatsApp"
          class="inline-flex items-center gap-2 mt-4 px-5 py-2.5 bg-[#25D366] hover:bg-[#1ebe5b] text-white font-medium rounded-full transition-colors"
        >
          <img src="/images/whatsapp-icon.svg" alt="" class="w-5 h-5 invert" />
          Vamos conversar?
        </a>
      </div>

    </div>
  </div>
</section>
