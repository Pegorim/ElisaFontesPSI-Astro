---
import '../styles/global.css';

interface Props {
	title: string;
    description?: string;
    image?: string;
}

const {
    title,
    description = "Elisa Fontes, psicóloga clínica em Niterói, RJ. Atendimento presencial e online. Agende sua consulta e comece sua jornada de autoconhecimento.",
    image = "/images/profile.jpg"
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const imageURL = new URL(image, Astro.site);

const structuredData = {
    "@context": "https://schema.org",
    "@type": "Physician",
    "name": "Elisa Fontes",
    "givenName": "Elisa",
    "familyName": "Fontes",
    "jobTitle": "Psicóloga Clínica",
    "medicalSpecialty": "Psychology",
    "description": "Psicóloga clínica em Niterói com 38 anos de experiência em psicanálise. Atendimento presencial e online.",
    "url": "https://elisafontes.com.br",
    "telephone": "+55-21-98744-9887",
    "email": "psi.elisafontes@gmail.com",
    "image": imageURL.href,
    "address": {
        "@type": "PostalAddress",
        "streetAddress": "Rua Tupiniquins 93",
        "addressLocality": "São Francisco",
        "addressRegion": "Niterói, RJ",
        "postalCode": "24360-400",
        "addressCountry": "BR"
    },
    "geo": {
        "@type": "GeoCoordinates",
        "latitude": -22.8833,
        "longitude": -43.1036
    },
    "sameAs": [
        "https://www.instagram.com/elisa12fontes"
    ],
    "areaServed": [
        {
            "@type": "City",
            "name": "Niterói"
        },
        {
            "@type": "Country",
            "name": "Brasil"
        }
    ],
    "knowsAbout": ["Psicanálise", "Ansiedade", "Depressão", "Terapia Online", "Psicologia Clínica"],
    "hasCredential": {
        "@type": "EducationalOccupationalCredential",
        "credentialCategory": "Professional License",
        "name": "CRP 05/62794"
    }
};
---

<!doctype html>
<html lang="pt-BR" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

        <!-- Canonical URL -->
        <link rel="canonical" href={canonicalURL} />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content={canonicalURL} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={imageURL} />
        <meta property="og:locale" content="pt_BR" />
        <meta property="og:site_name" content="Terapia com Elisa" />

        <!-- Twitter -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:url" content={canonicalURL} />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <meta name="twitter:image" content={imageURL} />

        <!-- Structured Data -->
        <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

        <!-- Google Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400&display=swap" rel="stylesheet">

		<title>{title}</title>
	</head>
	<body class="antialiased min-h-screen flex flex-col overflow-x-hidden">
		<slot />
	</body>
</html>
